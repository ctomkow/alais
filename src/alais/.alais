# git sub-command typo fixes

# git init
function git () {
    if [[ "$1" = "inint" || "$1" = "itit" || "$1" = "innit" || "$1" = "inot" || "$1" = "inut" || "$1" = "tinit" ]]
    then
        /usr/bin/git init "${@:2}";
        return;
    fi
    /usr/bin/git "$@";
}

# git add
