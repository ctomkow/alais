# functions to protect against typos
function sudo () {
    if [[ "$1" = "rm" && "$2" = "-rf" && "$3" = "/" ]] || [[ "$1" = "rm" && "$2" = "-fr" && "$3" = "/" ]]
    then
        echo "pls no";
        return;
    fi
    /usr/bin/sudo "$@";
}
